<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raspberry.practicalparent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UI.ChooseActivity"
            android:label="@string/title_activity_choose"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".UI.CoinFlipActivity"
            android:label="Coin Flip"
            android:parentActivityName=".UI.MainActivity">
        </activity>
        <activity
            android:name=".UI.AddKidActivity"
            android:label="Add Child"
            android:parentActivityName=".UI.KidOptionsActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".UI.KidOptionsActivity"
            android:label="Options"
            android:parentActivityName=".UI.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".UI.HistoryActivity"
            android:label="History"
            android:parentActivityName=".UI.MainActivity">
        </activity>
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>